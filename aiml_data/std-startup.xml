<aiml version="1.0.1" encoding="UTF-8">
    <!-- std-startup.xml -->
    <!-- <category> 作为AIML的原子级单元 -->
    <category>

        <!-- 匹配用户输入的模式 -->
        <!-- 如果用户输入 "LOAD AIML B" -->
        <pattern>LOAD AIML B</pattern>

        <!-- <Template> 用来响应模式 -->
        <!-- <learn>是一个aiml文件 -->
        <template>

            <learn>base0.aiml</learn>
            <learn>celebrity.aiml</learn>
            <learn>greeting.aiml</learn>
            <learn>gossip.aiml</learn>

            <!-- 在这下面你能添加更多的aiml文件 -->

            <!-- 设置机器人的属性 -->
            <think>
                <set name='botname'>阿六</set>
                <set name='botgender'>男</set>
            </think>
        </template>

    </category>


</aiml>
